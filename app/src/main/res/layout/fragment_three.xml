<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mfragment.threeFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_marginTop="45dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
       >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/search" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/search_bg"
            android:layout_width="250dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:gravity="center">


            <EditText
                android:id="@+id/et_search"
                android:layout_width="200dp"
                android:layout_height="match_parent"

                android:background="@null"
                android:hint="关键字keyword"
                android:imeOptions="actionSearch"
                android:paddingLeft="25dp"
                android:paddingRight="72dp"
                android:singleLine="true"
                android:textColor="#fff544b4"
                android:textColorHint="#737373"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/a"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                 android:id="@+id/cancel"
                 android:layout_width="15dp"
                 android:layout_height="15dp"
                 android:background="@mipmap/an" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/a"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/b7" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <ImageButton
                android:id="@+id/go"
                android:layout_width="40dp"
                android:layout_height="39dp"
                android:background="@null"
                android:src="@mipmap/go" />
        </RelativeLayout>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/im"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/notice" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:visibility="visible" />

      <!--  android:focusableInTouchMode="false"
      如果设置该属性为false，则无法将焦点移到当前控件-->
        <com.example.demo.tools.TextNotice
            android:id="@+id/text_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/im"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#33A1C9" />
    </RelativeLayout>


    <ListView
        android:id="@+id/fragment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

       <!-- android:overScrollMode="never" 去阴影-->

    </ListView>



   </LinearLayout>
</LinearLayout>