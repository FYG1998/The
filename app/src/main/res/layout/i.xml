<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#fffffefe"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<!-- 渐变背景
              android:background="@drawable/shape_my_info_bg"
             -->
			<LinearLayout
				android:layout_marginTop="45dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"

				android:orientation="vertical">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="45dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:text="我的"
						android:textColor="#000000"
						android:textSize="18sp" />
				</RelativeLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="103dp"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:paddingLeft="19dp">

					<ImageView
						android:id="@+id/img_header"
						android:layout_width="60dp"
						android:layout_height="60dp"
						android:src="@mipmap/header" />

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="15dp"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="me"
							android:textColor="#000000"
							android:textSize="16sp" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="功能完善中"
							android:textColor="#000000"
							android:textSize="12sp" />
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="62dp"
					android:gravity="center"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="95dp"
						android:layout_height="match_parent"
						android:gravity="center"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="99+"
							android:textColor="#000000" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="音乐"
							android:textColor="#000000" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="95dp"
						android:layout_height="match_parent"
						android:gravity="center"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="99+"
							android:textColor="#000000" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="视频"
							android:textColor="#000000" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="95dp"
						android:layout_height="match_parent"
						android:gravity="center"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="99+"
							android:textColor="#000000" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="图片"
							android:textColor="#000000" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="95dp"
						android:layout_height="match_parent"
						android:gravity="center"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="100+"
							android:textColor="#000000" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="4dp"
							android:text="分享"
							android:textColor="#000000" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<RelativeLayout
					android:id="@+id/blame"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:paddingLeft="30dp"
					android:paddingRight="30dp"
					android:background="@drawable/btn_choose2">

					<ImageView
						android:id="@+id/img_collect"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_collect" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="10dp"
						android:layout_toRightOf="@+id/img_collect"
						android:text="免费声明"
						android:textColor="#000000" />

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_left_arrow" />
				</RelativeLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:background="#EEEEEE" />

				<RelativeLayout
					android:id="@+id/rl_skin"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:paddingLeft="30dp"
					android:paddingRight="30dp">

					<ImageView
						android:id="@+id/img_skin"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_skin" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="10dp"
						android:layout_toRightOf="@+id/img_skin"
						android:text="换肤"
						android:textColor="#000000" />

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_left_arrow" />
				</RelativeLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:background="#EEEEEE" />

				<RelativeLayout
					android:id="@+id/exit_login"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:paddingLeft="30dp"
					android:paddingRight="30dp"
					android:background="@drawable/btn_choose2">

					<ImageView
						android:id="@+id/img_logout"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_skin" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="10dp"
						android:layout_toRightOf="@+id/img_logout"
						android:text="退出登录"
						android:textColor="#ffff0000" />

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_left_arrow" />
				</RelativeLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:background="#EEEEEE" />


				<RelativeLayout
					android:id="@+id/tbsfile"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:paddingLeft="30dp"
					android:paddingRight="30dp"
					android:background="@drawable/btn_choose2">

					<ImageView
						android:id="@+id/img_logoutfile"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_skin" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="10dp"
						android:layout_toRightOf="@+id/img_logoutfile"
						android:text="TBS File"
						android:textColor="#000000" />

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_left_arrow" />
				</RelativeLayout>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:background="#EEEEEE" />
				<RelativeLayout
					android:id="@+id/qqtz"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:paddingLeft="30dp"
					android:paddingRight="30dp"
					android:background="@drawable/btn_choose2">

					<ImageView
						android:id="@+id/img_logoutfile1"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_skin" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="10dp"
						android:layout_toRightOf="@+id/img_logoutfile1"
						android:text="加入反馈QQ群"
						android:textColor="#000000" />

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_left_arrow" />
				</RelativeLayout>


				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:background="#EEEEEE" />
				<RelativeLayout
					android:id="@+id/path"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:paddingLeft="30dp"
					android:paddingRight="30dp"
					android:background="@drawable/btn_choose2">

					<ImageView
						android:id="@+id/img_logoutfile2"
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_skin" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="10dp"
						android:layout_toRightOf="@+id/img_logoutfile2"
						android:text="下载路径"
						android:textColor="#000000" />

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:src="@mipmap/icon_left_arrow" />
				</RelativeLayout>







			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</RelativeLayout>
